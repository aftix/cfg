{
  lib,
  config,
  ...
}: {
  options.aftix.sound = lib.mkEnableOption "sound configuration";

  config = lib.mkIf config.aftix.sound {
    security.rtkit.enable = true;

    services.pipewire = {
      enable = true;
      alsa.enable = true;
      alsa.support32Bit = true;
      pulse.enable = true;
    };
  };
}
